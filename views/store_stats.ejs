</style>

</head>

<body>
<div class="header">
<h1 ><%=  address %></h1>
</div>
<div id="graph"></div>



<script src="https://d3js.org/d3.v6.min.js"></script>
  <script>
    
    let dataset = <%- JSON.stringify(renderList) %>;
    console.log(dataset);
    const w = 1000;
    const h = 500;


    const padding = 30;

    const xScale = d3.scaleLinear()
                    .domain([0, 12])
                    .range([padding, w-padding]);

    const yScale = d3.scaleLinear()
                    .domain([0, d3.max(dataset)])
                    .range([h, 0]);

    const svg = d3.select("#graph")
                  .append("svg")
                  .attr("width", w)
                  .attr("height", h);

    svg.selectAll("rect")
       .data(dataset)
       .enter()
       .append("rect")
       .attr("width", 30)
       .attr("x", (d, i) => xScale(i))
       .attr("y", (d, i) => yScale(d))
       .attr("height", (d, i) => h - yScale(d))
       .attr("fill", "#1e2022")
  

